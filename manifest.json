{

  "description": "Read it later- Add to Shiori",
  "manifest_version": 2,
  "name": "Shiori",
  "version": "1.0",
  "icons": {
    "48": "icons/index.svg"
  },
  "applications": {
    "gecko": {
      "id": "shiori@tesseract.com",
      "strict_min_version": "50.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
	   "browser_style": true,
	   "default_icon": "icons/index.svg"
  },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }],
  "permissions": [
      "nativeMessaging",
      "activeTab",
      "tabs",
      "notifications"
    ]
}
